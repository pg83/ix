#!/usr/bin/env sh

set -xue

cd ${IX_DIR}

curl -k 'https://repology.org/api/v1/projects/?inrepo=stalix_dev&outdated=1' \
    | ix_flt \
    | grep -v mesa \
    | grep -v 'bld/' \
    | grep -v 'lib/qt' \
    | grep -v meson \
    | grep -v musl \
    | grep -v python \
    | grep -v perl \
    | grep -v rio \
    | grep -v ruby \
    | grep -v firmware \
    | grep -v chromium \
    | grep -v protobuf \
    | grep -v spirv \
    | grep -v vulkan \
    | grep -v webkit \
    | grep -v wlroots \
    | grep -v coreutils \
    | grep -v 'auto/make' \
    | grep -v 'bin/kernel' \
    | grep -v 'bin/glslang/old' \
    | grep -v 'lib/ffmpeg' \
    | grep -v grpc \
    | while read l; do (
    echo ${l}

    if ix_up ${l}; then
        git add -A
        git commit -m "up ${l}" || true
    else
        echo "FAILED ${l}"
    fi

    git checkout .
) done
